{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": [
            "dom",
            "esnext"
        ],
        "target": "es5",
        "jsx": "react",
        "removeComments": true,
        "outDir": "lib",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": false,
        "strict": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "next-example"
    ]
}